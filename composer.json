{
    "name": "distantnative/retour-for-kirby",
    "description": "Redirects and error tracking for Kirby",
    "type": "kirby-plugin",
    "version": "4.0.0",
    "license": "MIT",
    "keywords": [
        "kirby3",
        "kirby3-cms",
        "kirby3-plugin",
        "redirects",
        "errors",
        "routing"
    ],
    "authors": [
        {
            "name": "Nico Hoffmann",
            "email": "on-github@nhoffmann.com"
        }
    ],
    "require": {
        "getkirby/cms": "^3.5",
        "getkirby/composer-installer": "^1.2"
    },
    "config": {
        "optimize-autoloader": true
    },
    "extra": {
        "kirby-cms-path": false
    },
    "scripts": {
      "analyze": [
        "@analyze:composer",
        "@analyze:psalm",
        "@analyze:phpmd"
      ],
      "analyze:composer": "composer validate --strict --no-check-version --no-check-all",
      "analyze:phpmd": "phpmd . ansi phpmd.xml.dist --exclude 'tests/*,vendor/*'",
      "analyze:psalm": "psalm",
      "ci": [
        "@fix",
        "@analyze",
        "@test"
      ],
      "fix": "php-cs-fixer fix --config .php_cs",
      "test": "phpunit --stderr --coverage-html=tests/coverage"
    }
}
